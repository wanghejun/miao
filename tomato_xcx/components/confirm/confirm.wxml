<view class="cantainer" wx:if="{{visible}}">
  <view class="confirm">
  <textarea placeholder="{{placeholder}}" bindinput="watchValue" value="{{value}}" class="textarea"></textarea>
  <view class="actions">
    <view hover-class='active' class="sure view" bindtap="confirm">确定</view>
    <view hover-class='active' bindtap="cancel" class="view">取消</view>
  </view>
  </view>
</view>