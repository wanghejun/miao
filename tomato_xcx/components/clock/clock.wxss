.clock { 
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.clock .text {
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-70%);
}
.clock .image { 
  width: 320rpx;
  height: 320rpx;
}
.active {
  opacity: 0.9;
}