extends basic-layout.pug

block content
  div
    a(href='/post') 发贴
  ul
    each post in posts
      li.post_item
        a(href= `/user/${post.user.id}`)
          img(src= post.user.avatar  alt= post.user.name)
        h2
          a(href = `/post/${post.id}`)= post.title
        div
          span 发帖时间: #{new Date(post.createdAt).toString()}
        div
          span 回复数量: #{post.commentCount}
